<%- include('header')%>

    <div class="box" id="heading">
        <h1><%=kindOfDay%></h1>
    </div>
   <div class="box">
   <% newActivity.forEach(function(task){%>
    <form action="/delete" method="post">
        <div class="item">
            <input type="checkbox" value="<%=task.id%>" name="checkbox" onchange="this.form.submit()">
       <p><%=task.item%></p>
        </div>
        <input type="hidden" value="<%=kindOfDay%>" name="listTitle">
    </form>
   <% })%>
    <form class="item" action="/" method="post">
        <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
        <button type="submit" name="lists" value="<%=kindOfDay%>">+</button>
    </form>
</div>
<%- include('footer')%>
   
  